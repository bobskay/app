<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="FALSE">
    <!-- 定义日志的根目录 -->
    <!-- 定义日志文件名称,与工程名一致 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="logback"/>
    <property name="LOG_HOME" value="/opt/logs"/>
    <conversionRule conversionWord="hostName" converterClass="a.b.c.base.util.log.LogHostNameConfig" />
    <!--  控制台输出设置     -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{10} -%X{traceId} %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="logstash" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_HOME}/${APP_NAME}.json</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/${APP_NAME}/${APP_NAME}-%d{yyyy-MM-dd}-%i.json.gz</FileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>100</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <pattern>
                    <pattern>
                        {
                        "hostName": "%hostName",
                        "app": "${APP_NAME}",
                        "level": "%level",
                        "traceId": "%X{traceId}",
                        "thread": "%thread",
                        "class": "%logger{40}",
                        "message": "%message",
                        "stack_trace": "%exception{100}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="logstash"/>
    </appender>

    

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </root>

</configuration>